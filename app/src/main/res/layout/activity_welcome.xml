<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".WelcomeActivity"
    >


    <ImageView
        android:id="@+id/blueback"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignTop="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="6dp"
        android:background="@color/colorBlueWhite"
        android:translationY="-200dp" />

    <TextView
        android:id="@+id/txtVv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signIn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="407dp"
        android:layout_marginBottom="68dp"
        android:gravity="center"
        android:text="PLACE HOOK"
        android:textColor="@color/colorPrimary"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/txtV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:text="WELCOME"
        android:textColor="@color/colorAccent"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:rotation="-45"
        android:layout_marginTop="133dp"
        app:srcCompat="@mipmap/airline" />



    <android.support.design.button.MaterialButton
        android:id="@+id/signIn"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginBottom="72dp"
        android:gravity="top|center"
        android:paddingTop="20dp"
        android:text="Sign In"
        app:cornerRadius="10dp"
        android:textColor="@color/colorBlueWhite" />

    <android.support.design.button.MaterialButton
        android:id="@+id/signup"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/signIn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="73dp"
        android:gravity="top|center"
        android:paddingTop="20dp"
        android:text="SIGN UP"
        app:cornerRadius="10dp"
        android:textColor="@color/colorBlueWhite" />

</RelativeLayout>